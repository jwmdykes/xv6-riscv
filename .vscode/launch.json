    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Remote Attach",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/kernel/kernel",
            "MIMode": "gdb",
            "cwd": "${workspaceRoot}",
            "miDebuggerPath": "/opt/riscv/bin/riscv64-unknown-elf-gdb",
            "miDebuggerServerAddress": "localhost:26000",
        }
    ]
